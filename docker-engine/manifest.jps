{
    "jpsType": "install",
    "id": "docker-engine",
    "description": {
        "text": "## Docker Standalone Engine\n```\ndocker build; docker-compose up; docker swarm join\n```",
        "short": "Docker Standalone Engine"
    },
    "logo": "https://raw.githubusercontent.com/jelastic-jps/docker-native/master/images/docker-engine-logo.png",
    "name": "Docker Engine",
    "region": "vz7",
    "settings": {
        "fields": [{
            "type": "spinner",
            "name": "nodes",
            "caption": "Nodes",
            "min": 1,
            "max": 10,
            "default": 1
        },{
            "name": "mode",
            "type": "radio-fieldset",
            "values": {
                "clean": "Clean Engine",
                "deploy": "Deploy Compose YML",
                "swarm": "Connect to Swarm"
            },
            "default": "clean",
            "showIf": {
                "deploy": {
                    "name": "repo",
                    "type": "string",
                    "caption": "Compose Repo",
                    "default": "https://github.com/vegasbrianc/docker-compose-demo.git",
                    "required": true
                },
                "swarm": [{
                    "name": "token",
                    "type": "string",
                    "caption": "Join Token ",
                    "default": "",
                    "required": true
                }, {
                    "name": "host",
                    "type": "string",
                    "caption": "Host IP",
                    "default": "",
                    "required": true
                }]
            }
        }]
    },
    "baseUrl": "https://raw.githubusercontent.com/jelastic-jps/docker-native/master/addons",
    "nodes": [{
        "count": "${settings.nodes}",
        "cloudlets": 32,
        "image": "jelastic/docker-ce-compose",
        "nodeGroup": "cp",
        "displayName": "Engine Node",
        "extip": "true"
    }],
    "onInstall": [{
        "script": "${baseUrl}/scripts/upload-ssh-keys.js"
    }, {
        "if ('${settings.mode}' == 'deploy')": {
            "install": {
                "jps": "${baseUrl}/docker-deploy.jps",
                "settings": {
                    "repo": "${settings.repo}",
                    "type": "compose"
                }
            }
        }
    }, {
        "if ('${settings.mode}' == 'swarm')": [{
            "sleep": "10000"
        },{
            "cmd[cp]": "docker swarm join --token ${settings.token} ${settings.host}:2377"
        }]
    }],
    "success": {
        "text": "text/engine-success.mrkd",
        "email": "text/engine-success.mrkd"
    },
    "jpsVersion": "1.1"
}
